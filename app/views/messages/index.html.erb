<% @messages.each do |message| %>
  <div>
    <h3><%= message.title %></h1>
    <p><%= message.description %></p>
  </div>
  <%= link_to 'Show message', message_path(message), class: 'btn btn-default' %>
<% end %>

<div>
  <%= link_to 'New message', new_message_path, class: 'btn btn-info' %>    
</div>
